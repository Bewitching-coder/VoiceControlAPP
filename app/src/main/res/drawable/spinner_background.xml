<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When the spinner is selected/focused -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#F0F0F0" /> <!-- Slightly grey background -->
            <corners android:radius="4dp" />   <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#2196F3" /> <!-- Blue border when focused/selected -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="4dp" />   <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#D0D0D0" /> <!-- Default grey border -->
        </shape>
    </item>

</selector>
